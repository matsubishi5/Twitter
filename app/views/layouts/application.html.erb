<!DOCTYPE html>
<html>
<head>
	<title>Twitter</title>
	<%= csrf_meta_tags %>
	<%= csp_meta_tag %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	<script src="https://kit.fontawesome.com/c51513dd6c.js" crossorigin="anonymous"></script>
</head>

<body>
	<% if user_signed_in? %>
	<nav class="navbar navbar-inverse">
		<div class="container-fluid">
			<div class="navbar-header">
				<li><%= link_to "Twitter", root_path, class: "navbar-brand" %></li>
			</div>
			<ul class="nav navbar-nav navbar-right">
				<li><%= link_to 'タイムライン', tweets_path %></li>
				<li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
			</ul>
		</div>
	</nav>
	<% else %>
	<nav class="navbar navbar-inverse">
		<div class="container-fluid">
			<div class="navbar-header">
				<li><%= link_to "Twitter", root_path, class: "navbar-brand" %></li>
			</div>
			<ul class="nav navbar-nav navbar-right">
				<li><%= link_to "アカウント作成", new_user_registration_path %></li>
				<li><%= link_to "ログイン", new_user_session_path %></li>
			</ul>
		</div>
	</nav>
	<% end %>
	<%= yield %>
</body>
</html>
