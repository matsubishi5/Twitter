<div class="containe-fluidr">
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-6 user-container">
        <i class="fab fa-twitter"></i>
        <h2 class="field">Twitterにログイン</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"form-control",placeholder:"名前" %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "current-password",class:"form-control",placeholder:"パスワード" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :パスワードを記憶 %>
            </div>
          <% end %>

          <div class="actions field">
            <%= f.submit "ログイン",class:"btn btn-info btn-block" %>
          </div>
        <% end %>

        <%= render "shared/links" %>
        <div class="col-lg-3"></div>
    </div>
  </div>
</div>