<div class="containe-fluidr">
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-6 user-container">
        <h2 class="field">プロフィールを編集</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <%= attachment_image_tag current_user, :header_image, :size =>'100%x200', class: "img-rounded", fallback: "no_image2.jpg", onClick:"$('#upfile1').click()" %>
          <%= f.attachment_field :header_image, placeholder: "ヘッダー画像", class: "user-edit-form", style:"display:none;", id:"upfile1" %>

          <%= attachment_image_tag current_user, :profile_image, :size =>'100x100', class: "img-circle pull-left profile-thumb", fallback: "no_image1.jpg", onClick:"$('#upfile2').click()" %>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form", style:"display:none;", id:"upfile2" %>

          <div class="field">
            <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"form-control",placeholder:"名前" %>
          </div>

          <div class="field">
            <%= f.text_area :introduction, autocomplete: "introduction",class:"form-control",placeholder:"自己紹介" %>
          </div>

          <div class="field" >
            <%= f.label :生年月日 %><br />
            <%= f.date_select :birthday, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1) %>
          </div>

          <%= f.submit "保存",class:"btn btn-info btn-lg" %>

          <div class="actions">
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
