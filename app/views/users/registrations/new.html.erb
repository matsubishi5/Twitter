<div class="containe-fluidr">
	<div class="row">
		<div class="col-lg-3"></div>
		<div class="col-lg-6 user-container">
			<i class="fab fa-twitter"></i>
			<h2 class="field">アカウント作成</h2>

			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			<%= render "devise/shared/error_messages", resource: resource %>

			<div class="field">
				<%= f.text_field :name, autofocus: true, autocomplete: "name",class:"form-control",placeholder:"名前" %>
			</div>

			<div class="field">
				<%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control",placeholder:"メールアドレス" %>
			</div>

			<div class="field">
				<%= f.password_field :password, autocomplete: "new-password",class:"form-control",placeholder:"パスワード(8~20文字)" %>
			</div>

			<div class="field">
				<%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control",placeholder:"確認のためもう1度" %>
			</div>

			<div class="actions field">
				<%= f.submit "アカウント作成",class:"btn btn-info btn-block" %>
			</div>
			<% end %>

			<%= render "shared/links" %>
			<div class="col-lg-3"></div>
		</div>
	</div>
</div>